<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <com.xy.lifemanage.view.TopBar
        android:id="@+id/topBar_ring_shareme"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#00BB9C"
        custom:leftText="取消"
        custom:leftTextColor="#ffffff"
        custom:leftTextSize="20sp"
        custom:mtitleTextColor="#ffffff"
        custom:rightText="发布"
        custom:rightTextColor="#ffffff"
        custom:rightTextSize="25sp"
        custom:titleText="分享我"
        custom:titleTextSize="12sp">
    </com.xy.lifemanage.view.TopBar>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_marginTop="13dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ring_shareme_et_content"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@null"
            android:gravity="left|top"
            android:textSize="18sp"
            android:textColor="#000"
            android:textColorHint="#666"
            android:hint="展示自我..."/>

        <GridView
            android:id="@+id/ring_shareme_noScrollgridview"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:horizontalSpacing="3dp"
            android:numColumns="4"
            android:scrollbars="none"
            android:verticalSpacing="5dp"/>
    </LinearLayout>
</LinearLayout>