<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">
    <com.xy.lifemanage.view.TopBar
        android:id="@+id/topBarOrSetting"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#00BB9C"
        custom:titleText="洋葱校园"
        custom:mtitleTextColor="#ffffff"
        custom:titleTextSize="12sp"
        custom:leftBackground="@mipmap/back"
        >
    </com.xy.lifemanage.view.TopBar>
    <RelativeLayout
        android:id="@+id/org_setting_detail"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/org_setting_name"
            android:text="洋葱校园"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <!--<TextView-->
            <!--android:id="@+id/org_setting_power"-->
            <!--android:text="负责人"-->
            <!--android:layout_toRightOf="@id/org_setting_name"-->
            <!--android:layout_alignTop="@id/org_setting_name"-->
            <!--android:layout_marginTop="3dp"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:textSize="14sp"-->
            <!--android:textColor="#666"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <TextView
            android:id="@+id/org_setting_tv"
            android:layout_below="@id/org_setting_name"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:padding="5dp"
            android:text="小组码"
            android:textColor="#666"
            android:background="@drawable/button_shape3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/org_setting_code"
            android:layout_toRightOf="@id/org_setting_tv"
            android:layout_alignTop="@id/org_setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ea8010"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="123456"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#666"
        />
    <RelativeLayout
        android:id="@+id/org_setting_member"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/org_setting_orpeople"
            android:text="小组成员"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/org_setting_orpeoplecount"
            android:text="3人"
            android:layout_toLeftOf="@+id/org_setting_people"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/org_setting_people"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#666"
        />
    <RelativeLayout
        android:id="@+id/org_setting_classify"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="小组类型"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#666"
        />
    <RelativeLayout
        android:id="@+id/org_setting_jianjie"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="小组简介"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/next"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/org_setting_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="退出小组"
        android:textSize="20sp"
        android:background="@drawable/button_shape_red"
        android:layout_marginRight="15dp"
        android:layout_marginTop="200dp"
        />
</LinearLayout>