<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.xy.lifemanage.view.TopBar
        android:id="@+id/topBarORCreatePro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#00BB9C"
        custom:leftBackground="@mipmap/back"
        custom:mtitleTextColor="#ffffff"
        custom:rightText="完成"
        custom:rightTextColor="#ffffff"
        custom:rightTextSize="25sp"
        custom:titleText="记录"
        custom:titleTextSize="12sp">
    </com.xy.lifemanage.view.TopBar>
    <TextView
        android:id="@+id/or_create_pro_name"
        android:padding="15dp"
        android:text="项目名称"
        android:textColor="#666"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#666"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/or_create_pro_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:background="@null"
            android:hint="主题："
            android:textColorHint="#666"
            android:textSize="20sp"
            android:textColor="#666"/>

        <Button
            android:id="@+id/or_create_pro_addfujian"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/fujian"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#666"
        android:layout_height="0.5dp"/>
    <EditText
        android:id="@+id/or_create_pro_detail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:padding="10dp"
        android:hint="内容..."
        android:textColor="#000"
        android:textColorHint="#666"
        android:gravity="top|left"
        android:textSize="20sp"
        />
    <GridView
        android:id="@+id/ring_sharepro_noScrollgridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:horizontalSpacing="3dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp"/>

</LinearLayout>