<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.xy.lifemanage.view.TopBar
        android:id="@+id/topBarORCreateTask"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#00BB9C"
        custom:leftBackground="@mipmap/back"
        custom:mtitleTextColor="#ffffff"
        custom:rightText="完成"
        custom:rightTextColor="#ffffff"
        custom:rightTextSize="25sp"
        custom:titleText="任务"
        custom:titleTextSize="12sp">
    </com.xy.lifemanage.view.TopBar>
    <TextView
        android:id="@+id/or_create_task_title"
        android:padding="15dp"
        android:text="洋葱校园"
        android:textColor="#666"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#666"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/create_task_addreceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/or_create_task_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="接收人"
            android:textSize="20sp"
            android:textColor="#666"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/circle"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#666"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/or_create_task_finishtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="完成时间"
            android:textSize="20sp"
            android:textColor="#666"/>
        <Button
            android:id="@+id/or_create_task_timer"
            android:layout_toRightOf="@id/or_create_task_finishtime"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/timer"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/create_task_addfujian"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/fujian"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#666"
        android:layout_height="0.5dp"/>
    <EditText
        android:id="@+id/or_create_task_detail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:padding="10dp"
        android:hint="内容..."
        android:textColor="#000"
        android:textColorHint="#666"
        android:gravity="top|left"
        android:textSize="20sp"
        />
    <GridView
        android:id="@+id/create_task_noScrollgridview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:horizontalSpacing="3dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>